{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Graduaciones",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Graduaciones",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "es.ugr.defc.graduaciones",
      "publisher": "Delegación de Estudiantes de la Facultad de Ciencias de la UGR",
      "copyright": "GPL-3.0",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "shortDescription": "Aplicación para gestionar las entradas de las graduaciones",
      "longDescription": "Esta aplicación permite generar, enviar y validar entradas para las graduaciones de la Facultad de Ciencias de la Universidad de Granada"
    }
  }
}
